<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/form.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-error-message"><%= errorMessage %></div>
        <% } %>
        <form class="register-form" action="/cust-register" method="POST" novalidate>
            <div class="form-control">
                <label for="fname">First Name:</label>
                <input 
                class="<%= validationErrors.find(e => e.param === 'fname') ? 'invalid' : '' %>"
                type="fname" 
                name="fname" 
                id="fname" 
                value="<%= oldInput.fname %>">
            </div>
            <div class="form-control">
                <label for="lname">Last Name:</label>
                <input 
                class="<%= validationErrors.find(e => e.param === 'lname') ? 'invalid' : '' %>"
                type="lname" 
                name="lname" 
                id="lname" 
                value="<%= oldInput.lname %>">
            </div>
            <div class="form-control">
                <label for="phone">Phone Number:</label>
                <input 
                class="<%= validationErrors.find(e => e.param === 'phone') ? 'invalid' : '' %>"
                type="phone" 
                name="phone" 
                id="phone" 
                value="<%= oldInput.phone %>">
            </div>
            <div class="form-control">
                <label for="email">E-Mail:</label>
                <input 
                class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                type="email" 
                name="email" 
                id="email" 
                value="<%= oldInput.email %>">
            </div>
            <div class="form-control">
                <label for="password">Password:</label>
                <input 
                class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                type="password" 
                name="password" 
                id="password" 
                value="<%= oldInput.password %>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password:</label>
                <input 
                class="<%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : '' %>"
                type="password" 
                name="confirmPassword" 
                id="confirmPassword" 
                value="<%= oldInput.confirmPassword %>">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <button class="btn" type="submit">Register</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>